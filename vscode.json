{
	// dgideas@outlook.com
	"editor.fontFamily": "Consolas, 'Ubuntu mono', 'Courier New', monospace ,'Droid Sans Fallback'",
	// "editor.fontSize": 18,
	// "terminal.integrated.fontSize": 18,
	// "markdown.preview.fontSize": 18,
	"debug.console.fontFamily": "Consolas, 'Ubuntu mono', 'Courier New', monospace ,'Droid Sans Fallback'",
	// "debug.console.fontSize": 18,
	// "chat.fontSize": 15,
	// "chat.editor.fontSize": 15,
	"editor.renderWhitespace": "all",
	"editor.folding": true,
	"editor.tabSize": 4,
	"editor.rulers": [0, 80],
	"editor.lineNumbers": "on",
	"editor.renderControlCharacters": true,
	"editor.cursorBlinking": "blink",
	"editor.acceptSuggestionOnEnter": "off",
	"update.mode": "none",
	"editor.detectIndentation": true,
	"editor.codeLens": true,
	"editor.formatOnType": false,
	"editor.formatOnPaste": false,
	"editor.wrappingIndent": "same",
	"files.hotExit": "off",
	"files.autoGuessEncoding": true,
	"git.confirmSync": false,
	"editor.minimap.enabled": true,
	"editor.minimap.maxColumn": 80,
	// for Default Dark+ Theme
	"workbench.colorCustomizations": {
		"editorCursor.foreground": "#bfbfbf", //#aaaaaa
		"editor.lineHighlightBackground": "#232323",
		"editor.lineHighlightBorder": "#2a2a2a",
		"editorIndentGuide.background1": "#5f5f5f",
		"editorIndentGuide.activeBackground1": "#aaaaaa",
		"editorWhitespace.foreground": "#5f5f5f",
		"editor.background": "#101010",
		"editorLineNumber.activeForeground": "#99ddff",
		"editorGutter.modifiedSecondaryBackground": "#1b81a8",
		"editorGutter.addedSecondaryBackground": "#267626",
		"terminal.background": "#300a24",
		"terminal.findMatchHighlightBorder": "#507090",
		"terminal.findMatchBorder": "#aaeeff",
		"git.blame.editorDecorationForeground": "#606060",
	},
	"typescript.check.npmIsInstalled": false,
	"window.restoreWindows": "none",
	"editor.minimap.showSlider": "always",
	"editor.mouseWheelZoom": false,
	"editor.dragAndDrop": false,
	"window.zoomLevel": 0,
	"extensions.ignoreRecommendations": true,
	"html.format.indentInnerHtml": true,
	"git.enableSmartCommit": true,
	"html.autoClosingTags": false,
	"git.ignoreMissingGitWarning": true,
	// "terminal.integrated.fontSize": 16,
	"terminal.integrated.enableBell": true,
	"terminal.integrated.showExitAlert": false,
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.defaultProfile.osx": "bash",
	"terminal.integrated.stickyScroll.enabled": false,
	"terminal.integrated.localEchoEnabled": "off",
	"editor.trimAutoWhitespace": false,
	"editor.showFoldingControls": "always",
	"editor.selectionClipboard": false, // Support for Linux middle-click selection
	"git.blame.editorDecoration.enabled": true,
	"git.blame.editorDecoration.template": "${subject}, ${authorName} (${authorDateAgo})",
	"workbench.editor.untitled.hint": "hidden", // 1.56+
	"telemetry.telemetryLevel": "off",
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.bracketPairColorization.enabled": false,
	"[rust]": {
		"editor.defaultFormatter": "rust-lang.rust-analyzer",
		"editor.formatOnSave": true
	},
	"rust-analyzer.inlayHints.typeHints.enable": false,
	"rust-analyzer.inlayHints.renderColons": false,
	"rust-analyzer.inlayHints.parameterHints.enable": false,
	"editor.stickyScroll.enabled": false,
	"workbench.tree.enableStickyScroll": false,
	"http.experimental.systemCertificatesV2": true,
	"chat.disableAIFeatures": true, // Works with keybindings.json
	"github.copilot.enable": {
		"*": true,
	},
}
