{
	// dgideas@outlook.com
	"editor.fontFamily": "Consolas, 'Ubuntu mono', 'Courier New', monospace ,'Droid Sans Fallback'",
	// "editor.fontSize": 16,
	// "terminal.integrated.fontSize": 16,
	// "markdown.preview.fontSize": 16,
	"editor.insertSpaces": false,
	"editor.renderWhitespace": "all",
	"editor.folding": true,
	"editor.tabSize": 4,
	"editor.rulers": [0, 80],
	"editor.lineNumbers": "on",
	"editor.renderControlCharacters": true,
	"editor.renderIndentGuides": true,
	"editor.cursorBlinking": "blink",
	"editor.acceptSuggestionOnEnter": "off",
	"update.mode": "none",
	"editor.detectIndentation": true,
	"editor.codeLens": true,
	"editor.formatOnType": false,
	"editor.formatOnPaste": false,
	"editor.wrappingIndent": "same",
	"files.hotExit": "off",
	"files.autoGuessEncoding": true,
	"git.confirmSync": false,
	"editor.minimap.enabled": true,
	"editor.minimap.maxColumn": 80,
	// for Default Dark+ Theme
	"workbench.colorCustomizations": {
		"editorCursor.foreground": "#bfbfbf", //#aaaaaa
		"editor.lineHighlightBackground": "#232323",
		"editor.lineHighlightBorder": "#2a2a2a",
		"editorIndentGuide.background": "#5f5f5f",
		"editorIndentGuide.activeBackground": "#909090",
		"editorWhitespace.foreground": "#5f5f5f",
		"editor.background": "#101010",
		"editorLineNumber.activeForeground": "#99ddff",
		"terminal.background": "#300a24",
	},
	"typescript.check.npmIsInstalled": false,
	"window.restoreWindows": "none",
	"editor.minimap.showSlider": "always",
	"editor.mouseWheelZoom": false,
	"editor.dragAndDrop": false,
	"window.zoomLevel": 0,
	"extensions.ignoreRecommendations": true,
	"html.format.indentInnerHtml": true,
	"git.enableSmartCommit": true,
	"html.autoClosingTags": false,
	"git.ignoreMissingGitWarning": true,
	"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
	"terminal.integrated.shell.linux": "/bin/bash",
	"terminal.integrated.shell.osx": "/bin/bash",
	// "terminal.integrated.fontSize": 16,
	"telemetry.enableTelemetry": false,
	"terminal.integrated.enableBell": true,
	"terminal.integrated.showExitAlert": false,
	"search.location": "panel",
	"editor.trimAutoWhitespace": false,
	"editor.showFoldingControls": "always",
	"editor.selectionClipboard": false, // Support for Linux middle-click selection
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.codeLens.enabled": false,
	"gitlens.statusBar.enabled": false,
	"gitlens.defaultDateStyle": "absolute",
}
